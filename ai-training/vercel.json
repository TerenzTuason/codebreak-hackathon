{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "FLASK_ENV": "production",
        "GOOGLE_GEMINI_API_KEY": "@google_gemini_api_key",
        "GEMINI_MODEL": "gemini-2.0-flash"
    }
} 